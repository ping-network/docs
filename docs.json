{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Ping Documentation",
  "logo": {
    "dark": "/big-logo-white@2x.svg",
    "light": "/big-logo-blue@2x.svg"
  },
  "favicon": "/favicon-ping-light.svg",
  "colors": {
    "primary": "#3E75FF",
    "light": "#3E75FF",
    "dark": "#3E75FF"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Introduction",
            "pages": ["quickstart"]
          },
          {
            "group": "About Ping Network",
            "pages": [
              "what-is-ping",
              "overview/key-features", 
              "overview/solutions",
              "overview/contribute"
            ]
          },
          {
            "group": "Protocol Architecture",
            "pages": [
              "overview/architecture",
              "overview/validators",
              "overview/security"
            ]
          },
          {
            "group": "$PING",
            "pages": [
              "overview/points"
            ]
          },
          {
            "group": "Help center",
            "pages": ["help/faq", "help/support"]
          }
        ]
      },
      {
        "tab": "For Developers",
        "groups": [
          {
            "group": "For businesses",
            "pages": ["Clients/API-overview"]
          },
          {
            "group": "API Endpoints",
            "openapi": {
              "source": "/swagger.json",
              "directory": "api-reference"
            }
          }
        ]
      }
    ],
    "anchors": [
      {
        "name": "X (Twitter)",
        "icon": "x-twitter",
        "url": "https://x.com/pingnetwork_io"
      },
      {
        "name": "Discord",
        "icon": "discord",
        "url": "https://discord.gg/pingnetwork"
      }
    ]
  },
  "footerSocials": [
    {
      "type": "twitter",
      "url": "https://x.com/pingnetwork_io"
    },
    {
      "type": "discord",
      "url": "https://discord.gg/pingnetwork"
    }
  ]
}